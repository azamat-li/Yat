{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "es6",
    "noImplicitAny": true,
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*"
        ]
    }
  },
  "include": ["src/**/*"]
}
